# Application settings
APP_NAME=Bot Detection API
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database settings
DATABASE_URL=postgresql+asyncpg://postgres:Password123!@localhost/bot_detection

# Security settings
SECRET_KEY=your-super-secret-key-here-change-in-production
ALLOWED_HOSTS=["*"]
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# API settings
API_V1_STR=/api/v1
PROJECT_NAME=Bot Detection API

# Redis settings
REDIS_URL=redis://localhost:6379

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Bot detection settings
DETECTION_THRESHOLD=0.7
SESSION_TIMEOUT_MINUTES=30
MAX_EVENTS_PER_SESSION=10000

# Integration settings
QUALTRICS_API_TOKEN=your-qualtrics-api-token
DECIPHER_API_KEY=your-decipher-api-key

# Monitoring settings
ENABLE_METRICS=true
METRICS_PORT=9090

# Base URL for webhooks
BASE_URL=https://your-api-domain.com 